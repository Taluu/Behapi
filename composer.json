{
    "name": "taluu/behapi",
    "description": "Test your remote api locally through Behat",
    "keywords": ["behat", "contexts", "extension", "api"],
    "license": "MIT",

    "authors": [
        {
            "name": "Baptiste Clavi√©",
            "email": "clavie.b@gmail.com",
            "role": "Lead maintainer"
        }
    ],

    "autoload": {
        "psr-4": {
            "Behapi\\Context\\": "context/",
            "Behapi\\Extension\\": "extension/"
        }
    },

    "require": {
        "php": "^7.0",

        "symfony/property-access": "^3.1",

        "guzzle/guzzle": "^3.9",
        "guzzlehttp/guzzle": "^4.2"
    },

    "suggest": {
        "twig/twig": "In order to use the Twig template in some contexts"
    },

    "require-dev": {
        "behat/behat": "^3.1"
    }
}
