{
    "name": "taluu/behapi",
    "description": "Test your remote api locally through Behat",
    "keywords": ["behat", "contexts", "extension", "api"],
    "license": "MIT",

    "authors": [
        {
            "name": "Baptiste Clavi√©",
            "email": "clavie.b@gmail.com",
            "role": "Lead maintainer"
        }
    ],

    "autoload": {
        "psr-4": {
            "Behapi\\": "src/"
        }
    },

    "require": {
        "php": "^7.1",

        "beberlei/assert": "^3.2",

        "symfony/property-access": "^3.1 || ^4.0",

        "psr/http-message": "^1.0",
        "psr/http-message-implementation": "^1.0",

        "php-http/httplug": "^1.0",
        "php-http/discovery": "^1.0",
        "php-http/client-common": "^1.4",
        "php-http/message-factory": "^1.0",

        "php-http/client-implementation": "^1.0",
        "php-http/message-factory-implementation": "^1.0"
    },

    "suggest": {
        "coduo/php-matcher": "In order to use the PHP Matcher context",
        "symfony/var-dumper": "In order to use the VarDumper debug dumper"
    },

    "conflict": {
        "behat/behat": "< 3.5",
        "symfony/dependency-injection": "< 2.8"
    },

    "prefer-stable": true,
    "minimum-stability": "dev",

    "require-dev": {
        "behat/behat": "^3.5",

        "nyholm/psr7": "^1.0",
        "coduo/php-matcher": "^2.3 || ^3.0",

        "php-http/message": "^1.0",
        "php-http/mock-client": "^0.3",

        "symfony/var-dumper": "^2.8 || ^3.3 || ^4.0",

        "phpstan/phpstan": "^0.10",
        "phpstan/phpstan-strict-rules": "^0.10",
        "phpstan/phpstan-beberlei-assert": "^0.10"
    }
}
