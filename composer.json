{
    "name": "taluu/behapi",
    "description": "Test your remote api locally through Behat",
    "keywords": ["behat", "contexts", "extension", "api"],
    "license": "MIT",

    "authors": [
        {
            "name": "Baptiste Clavi√©",
            "email": "clavie.b@gmail.com",
            "role": "Lead maintainer"
        }
    ],

    "autoload": {
        "psr-4": {
            "Behapi\\": "src/"
        }
    },

    "require": {
        "php": "^7.3 || ^8.0",

        "beberlei/assert": "^3.2",

        "symfony/property-access": "^3.4 || ^4.4 || ^5.2",

        "psr/http-client": "^1.0",
        "psr/http-client-implementation": "^1.0",

        "psr/http-message": "^1.0",
        "psr/http-message-implementation": "^1.0",

        "psr/http-factory": "^1.0",
        "psr/http-factory-implementation": "^1.0",

        "php-http/discovery": "^1.11",
        "php-http/client-common": "^2.2"
    },

    "suggest": {
        "symfony/var-dumper": "In order to use the VarDumper debug dumper"
    },

    "conflict": {
        "php-http/discovery": "< 1.11",
        "behat/behat": "< 3.7"
    },

    "prefer-stable": true,
    "minimum-stability": "dev",

    "require-dev": {
        "behat/behat": "^3.5",

        "nyholm/psr7": "^1.0",

        "php-http/message": "^1.0",

        "symfony/http-client": "^4.4 || ^5.2",
        "symfony/var-dumper": "^3.4 || ^4.4 || ^5.2"
    }
}
